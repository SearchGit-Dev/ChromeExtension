{
  "manifest_version": 3,
  "name": "SearchGit",
  "description": "Github searchbar on steroids. With search-as-you-type, semantic search over README, and more.",
  "version": "1.0",
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.searchgit.dev/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "searchbar.js"
      ],
      "css": [
        "searchbar.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://github.com/search*"
      ],
      "js": [
        "search_results.js"
      ],
      "css": [
        "search_results.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}